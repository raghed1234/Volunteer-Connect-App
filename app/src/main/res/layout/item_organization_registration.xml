<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tvVolunteerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volunteer Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />


        <TextView
            android:id="@+id/tvOpportunityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Applied for: Beach Cleanup"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="italic" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#E0E0E0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVolunteerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ volunteer@email.com"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvVolunteerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± +961 71 234 567"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvVolunteerSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¼ Skills: First Aid, Communication"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Beirut"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Jan 15, 2026"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRegisteredDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered: Dec 20, 2025"
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/button_reject"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/button_accept"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>